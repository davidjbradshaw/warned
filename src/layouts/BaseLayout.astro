---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { Language } from '../i18n/config';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang: Language;
  currentPath?: string;
}

const {
  title,
  description = 'We Are Retired Not Expired - WARNED is a community for active retirees in Brussels',
  lang,
  currentPath = ''
} = Astro.props;

const fullTitle = `${title} â€” WARNED`;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="WARNED" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />

    <title>{fullTitle}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  </head>
  <body>
    <div id="site-wrapper" class="site-wrapper">
      <Header currentLang={lang} currentPath={currentPath} />

      <main id="main-content" class="main-content">
        <slot />
      </main>

      <Footer currentLang={lang} />
    </div>
  </body>
</html>

<style is:global>
  .site-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .main-content {
    flex: 1;
    padding: 2rem 0;
  }

  .page-header {
    text-align: center;
    padding: 3rem 0;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  .page-header p {
    font-size: 1.2rem;
    color: var(--color-text-light);
  }

  .content-section {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 3vw;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .page-header p {
      font-size: 1rem;
    }
  }
</style>
